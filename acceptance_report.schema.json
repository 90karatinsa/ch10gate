{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "title":"AcceptanceReport",
  "type":"object",
  "properties":{
    "summary":{
      "type":"object",
      "properties":{"total":{"type":"integer"},"errors":{"type":"integer"},"warnings":{"type":"integer"},"pass":{"type":"boolean"}},
      "required":["total","errors","warnings","pass"]
    },
    "gateMatrix":{"type":"array","items":{
      "type":"object",
      "properties":{"id":{"type":"string"},"title":{"type":"string"},"pass":{"type":"boolean"},"ref":{"type":"string"},"notes":{"type":"string"}}
    }},
    "findings":{"type":"array","items":{"$ref":"diagnostics.schema.json"}}
  },
  "required":["summary","gateMatrix"]
}
